{% extends 'Home/main.html.twig' %}

{% block content %}
<div class='main-content'>

  <div class="grid-x ">
    <div class="cell medium-12 large-6">
      <div class='page-title-container'>
          <div class='yellow-overlay'></div>
          <img src='/assets/img/contact_us.png' alt='Contact Us' />
          <h3>CONTACT US</h3>
      </div>
    </div>
     <div class="cell medium-12 large-6">
          <div class='hide-for-large mt-5'></div>
          <div class='page-form-container mb-5 '>
               <form action={{ path('home_contact_us') }} method="POST">
                    <h6>Hi, how can we help you? </h6>
                    <p>Fill out the form and a member of our team will get back to you within 24 hours.</p>
                    <div class="grid-x">
                         <div class="large-12 cell">
                              <input type='text' placeholder='Enter your first name' name='contact_us[first_name]' required='true' />
                         </div>
                         <div class="large-12 cell">
                              <input type='text' placeholder='Enter your last name' name='contact_us[last_name]' required='true' />
                         </div>
                         <div class="large-12 cell">
                              <input type='email' placeholder='Email' name='contact_us[email]' required='true' />
                         </div>
                         <div class="large-12 cell">
                              <input type='text' placeholder='Subject' name='contact_us[subject]' required='true' />
                         </div>
                         <div class="large-12 cell">
                              <textarea rows='5' name='contact_us[message]' placeholder="Message"></textarea>
                         </div>
                         <div class="large-12 cell">
                              <input type="submit" Value="Submit" class="button" />
                         </div>
                    </div>
               </form>
          </div> 
          <div class='hide-for-large mt-5'></div>

     </div>
  </div>
</div>
<div class='clear-fix'></div>

 {% include 'js.html.twig' %}
   
{% endblock %}
